[core]
  editor = vim
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eo
  autocrlf = input
  sshCommand = ssh -o UserKnownHostsFile=/dev/null -o StrictHostKeyChecking=no

[alias]
  sha = rev-parse HEAD
  last = log -1 HEAD
  st = status
  ci = commit
  br = branch
  co = checkout
  sync = !git fetch -p && git rebase && git push -u
  brall = !git branch -a
  merged = branch -a --merged  # list merged branches
  cleanup = "!git branch --merged | grep  -v '\\*\\|master\\|main\\|develop' | xargs -n 1 -r git branch -d"
  rebase-master = !git pull --rebase upstream master # Rebase your changes on top of the remote master
	bda = !git branch --no-color --merged | command grep -vE \"^(\\+|\\*|\\s*(master|main|develop|dev)\\s*$)\" | command xargs -n 1 git branch -d
[pull]
  rebase = true
[push]
	default = current
[diff]
  renames = copies
  mnemonicprefix = true
[branch]
  autosetupmerge = true
  autosetuprebase = remote
[merge]
  stat = true
[color]
  ui = auto
[advice]
  statusHints = true
  pushNonFastForward = false
[status]
  submoduleSummary = true
[fetch]
  prune = true
  prune = true
[interactive]
  diffFilter = diff-so-fancy --patch  
